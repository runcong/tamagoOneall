{% extends 'TonyMainBundle::base.html.twig' %}

{% block title %}CO.Grade->Home{% endblock %}
{% block content %}

    <!--
    <div class="jumbotron"> <img class="pull-right" src="{{ asset('bundles/tonymain/images/JCTech.png') }}" alt="">
        <h1>The Best Rated Company</h1>
        <p> Company with the hightest avage score list here </p>
    </div>

    -->

    <!-- Carousel
    ================================================== -->
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="{{ asset('bundles/tonymain/images/nike.jpg') }}" alt="First slide">
                <div class="container">
                    <div class="carousel-caption">
                        <h1>Welcome to Company Grade</h1>
                        <h3>Want To Work For A Startup? Here's Where To Look! </h3>
                        <p><a class="btn btn-lg btn-primary" href="{{ path('fos_user_registration_register') }}" role="button">Sign up today</a></p>
                    </div>
                </div>
            </div>
            <div class="item">
                <img src="{{ asset('bundles/tonymain/images/autodesk.jpg') }}" alt="Second slide">
                <div class="container">
                    <div class="carousel-caption">
                        <h1>Insight Reports & Employees Reviews</h1>
                        <h3>Connect with “Start-up People” in Your Area</h3>
                        <p><a class="btn btn-lg btn-primary" href="{{ path('tony_main_listing') }}" role="button">Learn more</a></p>
                    </div>
                </div>
            </div>
            <div class="item">
                <img src="{{ asset('bundles/tonymain/images/nvidia.jpg') }}" alt="Third slide">
                <div class="container">
                    <div class="carousel-caption">
                        <h1>Get Hired. Love Your Company!</h1>
                        <h3>Check out what it’s like to work at these start-ups!</h3>
                        <p><a class="btn btn-lg btn-primary" href="{{ path('tony_main_jobs') }}" role="button">Browse Jobs</a></p>
                    </div>
                </div>
            </div>
            <div class="item">
                <img src="{{ asset('bundles/tonymain/images/bank-of-america.jpg') }}" alt="Third slide">
                <div class="container">
                    <div class="carousel-caption">
                        <h1>Your Next Career Move Starts Here</h1>
                        <h3>We love your feedback. Don't hesitate to contact us!</h3>
                        <p><a class="btn btn-lg btn-primary" href="{{ path('tony_main_contact') }}" role="button">Send us Your Message</a></p>
                    </div>
                </div>
            </div>

    </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div><!-- /.carousel -->

    <hr class="featurette-divider">
    <div class="container marketing">
    <!-- Three columns of text below the carousel -->


    <div class="row">

    {% for listing in listings %}
        <div class="col-sm-4">
            <img class="img-rounded" src="{{ asset(['bundles/tonymain/images/', listing.getImage]|join) }}" style="width: 140px; height: 140px;">
            <h2><a href="{{ path('tony_main_company_show', { 'id': listing.getId }) }}">{{ listing.getName }}</a></h2>
            <div class="snippet">
            <p>{{ listing.getDescription(300) }}</p>
            <p><a class="btn btn-default" href="{{ path('tony_main_company_show', { 'id': listing.getId }) }}" role="button">View details &raquo;</a></p>
            </div>
        </div><!-- /.col-lg-4 -->
    {% endfor %}

    </div><!-- /.row -->
    </div>







{% endblock %}