{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}


<div class="row ">
    <div class="text-center col-md-8 col-md-offset-2">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Signin</h3>
            </div>
            <div class="panel-body">
            <form class="login" action="{{ path("fos_user_security_check") }}" method="post">

                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                <div class="form-group">
                <label for="username">{{ 'security.login.username'|trans }}</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                </div>

                <div class="form-group">
                <label for="password">{{ 'security.login.password'|trans }}</label>
                <input type="password" id="password" name="_password" required="required" />
                </div>

                <div class="form-group">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                </div>

                <div class="form-group">

                    <span><input type="submit" id="_submit" class="btn btn-info" name="_submit" value="{{ 'security.login.submit'|trans }}" /></span>
                    <span class="col-sm-offset-1"></span>
                    <span><a class="btn btn-info" href="{{ path('fos_user_registration_register') }}" role="button">Register</a></span>
                </div>

                <div class="form-group">
                <a href="{{ path('fos_user_resetting_request') }}">Forgot password ?</a>
                </div>
</form>
            </div>
        </div>
    </div>
</div>
{% endblock fos_user_content %}
